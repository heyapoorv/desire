generator client {
  provider = "prisma-client-js"
  output   = "./generated/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String?
  createdAt DateTime @default(now())
  resumes   Resume[]
}
model Resume {
  id         Int      @id @default(autoincrement())
  userId     Int
  fileUrl    String
  parsedData Json?    // Optional if parsing might fail or happen later
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  user       User     @relation(fields: [userId], references: [id])
}

model Job {
  id          Int      @id @default(autoincrement())
  title       String
  company     String
  location    String
  description String
  postedAt    DateTime @default(now())
}
